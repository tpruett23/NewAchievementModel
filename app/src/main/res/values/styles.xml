<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mixedgrey</item>
        <item name="colorPrimaryDark">@color/mixeddarkgrey</item>
        <item name="colorAccent">@color/white</item>

    </style>


    <style name="SplashTheme">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AppCompat.DayNight">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="buttons">
        <item name="android:textColor">@color/black</item>
        <item name="android:color">@color/gold</item>
        <item name="android:textSize">30sp</item>
        <item name="colorControlHighlight">@color/dark_purp</item>
        <item name="colorButtonNormal">@color/gold</item>
    </style>


    <style name="originalButtons">
        <item name="android:background">@drawable/roundbutton</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
    </style>


    <style name="buttonssquare">
        <item name="android:background">@drawable/squarebuttons</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
    </style>


    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/dark_purp</item>
        <item name="colorButtonNormal">@color/gold</item>
    </style>

    <style name="UserDialog" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColor">@color/lightgreen</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:fontFamily">@font/kidsfont</item>
        <item name="android:textSize">45sp</item>
        <item name="android:background">@color/purple</item>
        <item name="android:windowActionBar">false</item>
        <!--<item name="android:windowCloseOnTouchOutside">false</item>-->
        <item name="android:windowBackground">@color/mixedpurple</item>
    </style>



    <style name="MyButton2" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/gold</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
